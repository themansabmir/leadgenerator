# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/leadharvester

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX_ID=your_custom_search_engine_id_here

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Redis for caching (production)
REDIS_URL=redis://localhost:6379

# Optional: Email configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Inngest Configuration (Production only - not needed for local dev)
# Get these from https://app.inngest.com/settings/keys
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=your_inngest_signing_key_here

# Development settings
NODE_ENV=development
